# Working flags:
FFLAGS = -O -q64 -qmaxmem=-1 -qrealsize=8 -qfixed=72 # -qsource #-qsuffix=f=for 

FFLAGS2 = -O -q64 -qmaxmem=-1 -qrealsize=8 -qfree=f90

# These are the rules to make the targets
#
%.o: %.for 
	$(FC) $(FFLAGS) -c $< -o $@
%.o: %.f90
	$(FC) $(FFLAGS2) -c $< -o $@
%.mod : %.f90
	$(FC) $(FFLAGS2) -c $< -o $@ 

CLASS36CTEM: $(OBJ)
	 $(FC) $(FFLAGS) -o $(BDIR)/CLASS36CTEM $(OBJ)

.PHONY: clean

clean:
	rm -f *.o *.mod *~ core CLASS36CTEM

$(ODIR):
	mkdir $(ODIR)	
